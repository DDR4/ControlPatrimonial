@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Página de Inicio";
}


<section class="content-header">
    <h1> Inicio <small> Panel de Control  </small></h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-lg-3 col-xs-4">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>Gestión de Usuario</h3>
                </div>
                <div class="icon">
                    <i class="fa fa-user"></i>
                </div>
                <a href="@Url.Action("Index", "Usuario")" class="small-box-footer">
                    Ir a Gestión de Usuario
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>

        @if (User.Identity.GetUserId().Equals("1"))
        {
            <div class="col-lg-3 col-xs-4">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>Gestión de Bien</h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-laptop"></i>
                    </div>
                    <a href="@Url.Action("Index", "Bien")" class="small-box-footer">
                        Ir a Gestión de Bien
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-4">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>Gestión de Transferencia</h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-exchange"></i>
                    </div>
                    <a href="@Url.Action("Index", "Transferencia")" class="small-box-footer">
                        Ir a Gestión de Transferencia
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
            <div class="col-lg-3 col-xs-4">
                <div class="small-box bg-maroon-gradient">
                    <div class="inner">
                        <h3>Gestión de Salida</h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-check"></i>
                    </div>
                    <a href="@Url.Action("Index", "Salida")" class="small-box-footer">
                        Ir a Gestión de Salida
                        <i class="fa fa-arrow-circle-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
</section>
